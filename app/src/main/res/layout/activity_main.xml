<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"

    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/ic_main"
            android:orientation="vertical">


            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="370dp">

                <HorizontalScrollView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="300dp"
                        android:layout_marginTop="20dp"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/im_poster1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingRight="10dp"
                            android:scaleType="centerCrop"
                            android:src="@drawable/ic_tmp_poster1" />

                        <ImageView
                            android:id="@+id/im_poster2"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:scaleType="centerCrop"
                            android:src="@drawable/ic_tmp_poster2" />

                    </LinearLayout>

                </HorizontalScrollView>

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="350dp"
                    android:adjustViewBounds="true"
                    android:scaleType="centerCrop"
                    android:src="@drawable/ic_news_wood" />

            </FrameLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true">

                <ImageView
                    android:id="@+id/stick"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="760dp"
                    android:layout_weight="4"
                    android:src="@drawable/ic_stick" />

                <ImageView
                    android:id="@+id/stick1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="760dp"
                    android:layout_weight="0.1"
                    android:src="@drawable/ic_stick"
                    android:visibility="invisible" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true">

                <ImageView
                    android:id="@+id/light3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="645dp"
                    android:layout_weight="0.2"
                    android:src="@drawable/ic_light"
                    android:visibility="invisible" />

                <ImageView
                    android:id="@+id/light"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="645dp"
                    android:layout_weight="3"
                    android:src="@drawable/ic_light" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentBottom="true">

                <ImageView
                    android:id="@+id/iv_Poster1"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="240dp"
                    android:layout_weight="2"
                    android:rotation="1"
                    android:scaleType="centerInside"
                    android:src="@drawable/ic_tmp_album1" />

                <ImageView
                    android:id="@+id/iv_Poster3"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="240dp"
                    android:layout_weight="0.5"
                    android:scaleType="center"
                    android:src="@drawable/ic_tmp_album2" />

                <ImageView
                    android:id="@+id/iv_Poster2"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="240dp"
                    android:layout_weight="4"
                    android:scaleType="centerInside" />
            </LinearLayout>

        </RelativeLayout>

    </ScrollView>

    <include
        android:id="@+id/toolbar"
        layout="@layout/actionbar"></include>

</RelativeLayout>